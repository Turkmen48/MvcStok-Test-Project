@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
            {
                <p class="text-info">Aranacak Müşteri Adı: @Html.TextBox("p") <input type="submit" value="Ara" class="btn btn-default" /></p>
                
            }
<table class="table table-bordered">
    <tr>
        <th>MUSTERI ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>

    <tbody>
        
        @foreach(var musteri in Model)
            {
                <tr>
                    <th>@musteri.MUSTERIID</th>
                    <td>@musteri.MUSTERIAD</td>
                    <td>@musteri.MUSTERISOYAD</td>
                    <td><a href="/Musteri/SIL/@musteri.MUSTERIID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Musteri/MusteriGetir/@musteri.MUSTERIID" class="btn btn-warning">GÜNCELLE</a></td>
                    <td>@Html.ActionLink("SİL BUTONU","SIL",new {id=musteri.MUSTERIID}, new {@class="btn btn-danger", onclick="return confirm('Gerçekten silmek istiyor musunuz?')"})</td>
                </tr>
            }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>